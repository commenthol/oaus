{{#contentFor 'pageStyles'}}
<style>
.signin {
  margin-right: auto !important;
  margin-left: auto !important;
  float: none;
  text-align: center;
}

.signin__header {
  text-align: center;
}

.signin-bottom__rememberme {
  float: left;
}

.signin-bottom__forgotten {
  float: right;
  margin-top: 10px;
  margin-bottom: 10px;
}
</style>
{{/contentFor}}

<div class="container">
  <div class="row">
    <div class="signin col-sm-8 col-md-6">
      <div class="jumbotron">
        <h2 class="signin__header">Sign in to <strong>OAus</strong></h2>

        <form class="signin__form" method="post" action="">
          {{>alert}}

          <div class="form-group">
            <label for="inputEmail" class="sr-only">Email address</label>
            <input class="form-control" type="email" name="username"
              placeholder="E-mail address" minlength="3" maxlength="254"
              required autofocus>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="sr-only">Password</label>
            <input class="form-control" type="password" name="password"
              placeholder="Password" minlength="4" maxlength="32"
              autocomplete="new-password" required>
          </div>
          {{>input-hidden}}

          <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
          <div class="signin-bottom">
            <span class="signin-bottom__rememberme checkbox">
              <label>
                <input id="remember-me" class="big" type="checkbox" name="remember" checked>
                Remember me
              </label>
            </span>
            <span class="signin-bottom__forgotten">
              <a href="{{uri.newPasswordURL}}">Forgot password?</a>
            </span>
          </div>
          <div class="clearfix"></div>
        </form>
      </div>
    </div>
  </div>
</div>
