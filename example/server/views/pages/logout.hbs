
{{#*inline "head-block"}}
<style>
.signout__header {
  text-align: center;
}
</style>
{{/inline}}

{{#*inline "body"}}
<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-3"></div>
  <div class="pure-u-1 pure-u-md-1-3 signout jumbotron">
    <h2 class="signout__header">Sign out</h2>

    <form id="signout__form" class="pure-form signout__form" method="post" action="">
      <fieldset>
        {{>input-hidden}}

        {{>alert}}

        <p>{{username}} Do you really want to sign out?</p>

        <button class="pure-input-1 pure-button pure-button-primary" type="submit">Sign out</button>
      </fieldset>
    </form>
  <div class="pure-u-1 pure-u-md-1-3"></div>
</div>
{{/inline}}

{{#*inline "script-block"}}
<script>
;(function () {
  // auto submit form
  document.getElementById('signout__form').submit();
})()
</script>
{{/inline}}

{{> base}}