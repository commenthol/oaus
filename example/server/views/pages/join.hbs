
{{#*inline "head-block"}}
<style>
.signup__header {
  text-align: center;
}
</style>
{{/inline}}

{{#*inline "body"}}
<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-3"></div>
  <div class="pure-u-1 pure-u-md-1-3 signin jumbotron">
    <h2 class="signup__header">Sign up</h2>

    <form class="pure-form pure-form-stacked" method="post" action="">
      <fieldset>
        {{>alert}}
        <input class="pure-input-1" type="email" name="username" placeholder="E-mail address" minlength="3" maxlength="254" required
          autofocus>
        <input class="pure-input-1" type="password" name="password" placeholder="Password" minlength="4" maxlength="64" autocomplete="new-password"
          required>
        <input class="pure-input-1" type="password" name="password2" placeholder="Repeat Password" minlength="4" maxlength="64" autocomplete="new-password"
          required>
        {{>input-hidden}}

        <button type="submit" class="pure-input-1 pure-button pure-button-primary">Sign in</button>
      </fieldset>
    </form>
  </div>
  <div class="pure-u-1 pure-u-md-1-3"></div>
</div>
{{/inline}}

{{>base}}