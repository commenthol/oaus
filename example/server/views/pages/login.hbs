{{#*inline "head-block"}}
<style>
  .signin__header {
    text-align: center;
  }

  .signin-bottom__rememberme {
    float: left;
  }

  .signin-bottom__forgotten {
    float: right;
    padding-top: 0.3em;
  }
</style>
{{/inline}}

{{#*inline "body"}}
<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-3"></div>
  <div class="pure-u-1 pure-u-md-1-3 signin jumbotron">
    <h2 class="signin__header">Sign in</h2>

    <form class="pure-form pure-form-stacked" method="post" action="">
      <fieldset>
        {{>alert}}
        <input class="pure-input-1" type="email" name="username" placeholder="E-mail address" minlength="3" maxlength="254" required
          autofocus>
        <input class="pure-input-1" type="password" name="password" placeholder="Password" minlength="4" maxlength="64" autocomplete="new-password"
          required>
        {{>input-hidden}}

        <button type="submit" class="pure-input-1 pure-button pure-button-primary">Sign in</button>

        <div class="signin-bottom">
          <span class="signin-bottom__rememberme">
            <label>
              <input type="checkbox" name="remember" checked> Remember me
            </label>
          </span>
          <span class="signin-bottom__forgotten">
            <a class="link--primary" href="{{uri.newPasswordURL}}">Forgot password?</a>
          </span>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="pure-u-1 pure-u-md-1-3"></div>
</div>
{{/inline}}

{{>base}}